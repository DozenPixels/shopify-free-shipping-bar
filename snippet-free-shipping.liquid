<!-- Custom Foundation grid styles are included, but are optional. Font Awesome icons are used. -->

{% assign free_ship = 2500 %}    

{% if cart.total_price < free_ship %}

    {% assign cartTotal = cart.total_price | money_without_currency %}

    {% assign toFreeShip = cartTotal | times: 100 | minus: free_ship | abs %}

    <div class="row full-width checkout-promo-bar">

      <i class="fa fa-exclamation-circle fa-lg" aria-hidden="true"></i> You are {% if toFreeShip < 500 %}only{% endif %} $<span>{{ toFreeShip | money_without_currency }}</span> away from Free Standard Shipping.

    </div>

{% else %}

    <div class="row full-width checkout-promo-bar">

      <i class="fa fa-thumbs-o-up fa-lg" aria-hidden="true"></i> Awesome! Your order qualifies for Free Standard Shipping

    </div>

{% endif %}